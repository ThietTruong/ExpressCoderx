extend ../layouts/common.pug
block content
    if errors
        each error in errors
            .alert.alert-danger=error     
    h1 Create User
    form.form-group(action="/users/create" method="POST")
        label Name
        input.form-control(name= "name" type="text" value=values? values.name:"")
        label Phone numbers
        input.form-control(name= "phone" type="text" value=values? values.phone:"")
        button(class="btn btn-primary") Create